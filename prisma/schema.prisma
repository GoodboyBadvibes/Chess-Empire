generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model applications {
  id            BigInt    @id @default(autoincrement())
  role_id       BigInt?
  email         String?
  message       String?
  portfolio_url String?
  created_at    DateTime? @default(now()) @db.Timestamptz(6)
  role          String?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model products {
  id          BigInt  @id @default(autoincrement())
  name        String?
  description String?
  price       BigInt?
  category    String?
  image_url   String?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model roles {
  id           BigInt   @id @default(autoincrement())
  title        String?
  description  String?
  category     String?
  is_active    Boolean?
  applications Json?    @default("[]")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model stories {
  id           BigInt    @id @default(autoincrement())
  title        String?
  excerpt      String?
  content      String?
  author       String?
  image_url    String?
  published_at DateTime? @default(now()) @db.Timestamptz(6)
}
